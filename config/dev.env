# ===========================================
# Configurações de Desenvolvimento
# ===========================================

# Perfil ativo
SPRING_PROFILES_ACTIVE=dev

# Banco de dados
DB_URL=jdbc:postgresql://localhost:5432/usersdb
DB_USERNAME=user
DB_PASSWORD=password

# Servidor
SERVER_PORT=8080

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_JDBC_CORE=DEBUG

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus,env,configprops
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# DevTools
SPRING_DEVTOLS_RESTART_ENABLED=true
SPRING_DEVTOLS_LIVERELOAD_ENABLED=true
