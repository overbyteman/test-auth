# ===========================================
# Configurações de Staging
# ===========================================

# Perfil ativo
SPRING_PROFILES_ACTIVE=stage

# Banco de dados
DB_URL=jdbc:postgresql://localhost:5432/usersdb_stage
DB_USERNAME=stage_user
DB_PASSWORD=stage_password

# Servidor
SERVER_PORT=8080

# Logging
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_EXAMPLE=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_JDBC_CORE=INFO

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# Performance
SERVER_UNDERTOW_THREADS_IO=6
SERVER_UNDERTOW_THREADS_WORKER=100
